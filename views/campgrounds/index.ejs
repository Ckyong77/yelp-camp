<% layout('layout/boilerplate') %>
    <h1>All Campgrounds</h1>
    <button><a href="/campgrounds/new">Add new Campground</a></button>
    <ul>
        <% for (let campground of campgrounds) { %>
            <div class="card mb-3" >
                <div class="row g-0">
                  <div class="col-md-4">
                    <img src="<%= campground.image %>" class="img-fluid rounded-start" alt="...">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title"><%= campground.title %></h5>
                      <p class="card-text"><%= campground.description %></p>
                      <p class="card-text"><small class="text-body-secondary">Price: $<%= campground.price %></small></p>
                      <a href="/campgrounds/<%=campground.id %>"><button type="button" class="btn btn-info">View <%= campground.title %></button></a>
                    </div>
                  </div>
                </div>
              </div>
        <% } %>
    </ul>
